<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UsersTestSuite">
	<test name="ApiChainingAtTestLevel">
		<classes>
			<class name="com.qa.api.tests.CreateUser">
				<methods>
					<include name="createUserTest" />
				</methods>
			</class>
			<class name="com.qa.api.tests.FetchUser">
				<methods>
					<include name="GetUserTest" />
				</methods>
			</class>
			<class name="com.qa.api.tests.DeleteUser">
				<methods>
					<include name="deleteUserTest" />
				</methods>
			</class>
		</classes>
	</test>
</suite> 
